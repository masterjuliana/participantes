# ------------------------------------------------------------
# üîπ Pacotes
# ------------------------------------------------------------
library(shiny)
library(shinydashboard)
library(plotly)
library(dplyr)
library(readr)
library(stringr)
library(lubridate)
library(DT)
library(tidyr)
library(writexl)

# ------------------------------------------------------------
# üîπ Fun√ß√µes
# ------------------------------------------------------------

carregar_metricas <- function(caminho = "m√©tricas decreto.csv") {
  message("üìÇ Lendo arquivo de m√©tricas...")
  dados <- read_delim(
    caminho,
    delim = ";",
    locale = locale(encoding = "latin1"),
    trim_ws = TRUE,
    show_col_types = FALSE
  )
  return(dados)
}

limpar_colunas_metricas <- function(df) {
  message("üßπ Limpando nomes e formatos...")
  
  nomes_limpos <- names(df) %>%
    str_replace_all("\\s+$", "") %>%      
    str_replace_all("\\n", "") %>%        
    str_replace_all("\\s+", "_") %>%      
    make.names(unique = TRUE)
  
  names(df) <- nomes_limpos
  
  if ("Data" %in% names(df)) {
    df <- df %>% mutate(Data = suppressWarnings(dmy(Data)))
  }
  
  campos_texto <- c("Justificativa", "Profiss√£o", "Encaminhamento", "OBS", "VerificaInstitui√ß√£o")
  for (campo in campos_texto) {
    if (campo %in% names(df)) {
      df[[campo]][is.na(df[[campo]])] <- ""
    }
  }
  
  if ("Institui√ß√£o" %in% names(df)) df$Institui√ß√£o <- str_to_upper(df$Institui√ß√£o)
  if ("Situa√ß√£o" %in% names(df)) df$Situa√ß√£o <- str_to_title(df$Situa√ß√£o)
  if ("Status" %in% names(df)) df$Status <- str_to_title(df$Status)
  
  return(df)
}

# Detecta automaticamente a coluna de temas
sumarizar_por_tema <- function(df) {
  col_tema <- names(df)[stringr::str_detect(names(df), regex("tema", ignore_case = TRUE))][1]
  if (is.na(col_tema)) stop("‚ùå Nenhuma coluna com 'Tema' encontrada!")
  
  df %>%
    group_by(Tema = .data[[col_tema]]) %>%
    summarise(
      Total = n(),
      Admitidas = sum(Situa√ß√£o == "Admitida", na.rm = TRUE),
      Taxa_Admiss√£o = ifelse(Total > 0, round(Admitidas/Total * 100, 1), 0),
      .groups = "drop"
    ) %>%
    filter(!is.na(Tema) & Tema != "") %>%
    arrange(desc(Total))
}

sumarizar_por_instituicao <- function(df) {
  df %>%
    group_by(Institui√ß√£o) %>%
    summarise(
      Total = n(),
      Admitidas = sum(Situa√ß√£o == "Admitida", na.rm = TRUE),
      Taxa_Admiss√£o = ifelse(Total > 0, round(Admitidas/Total * 100, 1), 0),
      .groups = "drop"
    ) %>%
    arrange(desc(Total))
}

sumarizar_por_situacao <- function(df) {
  df %>%
    group_by(Situa√ß√£o) %>%
    summarise(Total = n(), .groups = "drop") %>%
    arrange(desc(Total))
}

sumarizar_por_data <- function(df) {
  df %>%
    filter(!is.na(Data)) %>%
    group_by(Data) %>%
    summarise(Total = n(), .groups = "drop") %>%
    arrange(Data)
}

# NOVA FUN√á√ÉO: Para gr√°fico radar (tema x institui√ß√£o)
sumarizar_para_radar <- function(df) {
  col_tema <- names(df)[stringr::str_detect(names(df), regex("tema", ignore_case = TRUE))][1]
  
  if (is.na(col_tema)) {
    return(data.frame())
  }
  
  df %>%
    group_by(Tema = .data[[col_tema]], Institui√ß√£o) %>%
    summarise(
      Contribui√ß√µes = n(),
      Admitidas = sum(Situa√ß√£o == "Admitida", na.rm = TRUE),
      Taxa_Admiss√£o = ifelse(Contribui√ß√µes > 0, round(Admitidas/Contribui√ß√µes * 100, 1), 0),
      .groups = "drop"
    ) %>%
    filter(!is.na(Tema) & Tema != "" & !is.na(Institui√ß√£o) & Institui√ß√£o != "")
}

gerar_metricas_resumo <- function(df) {
  col_tema <- names(df)[stringr::str_detect(names(df), regex("tema", ignore_case = TRUE))][1]
  
  tibble(
    total_contribuicoes = nrow(df),
    total_temas = n_distinct(df[[col_tema]], na.rm = TRUE),
    total_instituicoes = n_distinct(df$Institui√ß√£o, na.rm = TRUE),
    taxa_admissibilidade = round(
      mean(df$Situa√ß√£o == "Admitida", na.rm = TRUE) * 100, 1
    )
  )
}

# ------------------------------------------------------------
# üîπ Dados
# ------------------------------------------------------------
dados <- carregar_metricas("m√©tricas decreto.csv")
dados <- limpar_colunas_metricas(dados)

# ------------------------------------------------------------
# üîπ Interface (UI)
# ------------------------------------------------------------
