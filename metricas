# ------------------------------------------------------------
# üîπ Server (L√≥gica)
# ------------------------------------------------------------
server <- function(input, output, session) {
  
  # Dataset filtrado para a tabela de dados completos (removendo colunas desnecess√°rias)
  dados_tabela_completa <- reactive({
    # Nomes das colunas a serem removidas (incluindo OBS)
    colunas_a_remover <- c("Texto", "Encaminhamento", "VerificaInstitui√ß√£o", "OBS")
    
    # Remove as colunas usando dplyr::select
    dados %>%
      select(-any_of(colunas_a_remover))
  })
  
  # Value Boxes
  metricas_resumo <- reactive({
    gerar_metricas_resumo(dados)
  })
  
  output$vb_total_contrib <- renderValueBox({
    metricas <- metricas_resumo()
    valueBox(metricas$total_contribuicoes, "Total de Contribui√ß√µes", icon = icon("file-text"), color = "blue")
  })
  
  output$vb_total_temas <- renderValueBox({
    metricas <- metricas_resumo()
    valueBox(metricas$total_temas, "Total de Temas", icon = icon("tags"), color = "green")
  })
  
  output$vb_total_inst <- renderValueBox({
    metricas <- metricas_resumo()
    valueBox(metricas$total_instituicoes, "Total de Institui√ß√µes", icon = icon("university"), color = "purple")
  })
  
  output$vb_taxa_adm <- renderValueBox({
    metricas <- metricas_resumo()
    valueBox(paste0(metricas$taxa_admissibilidade, "%"), "Taxa de Admiss√£o", icon = icon("check-circle"), color = "yellow")
  })
  
  # Gr√°fico de Temas (Resumo) - COM CORES E LEGENDA
  output$grafico_temas <- renderPlotly({
    temas_df <- sumarizar_por_tema(dados)
    temas_top10 <- head(temas_df, 10)
    
    # Cores diferentes para cada tema
    cores <- c("#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd",
               "#8c564b", "#e377c2", "#7f7f7f", "#bcbd22", "#17becf")
    
    plot_ly(
      data = temas_top10,
      x = ~Total,
      y = ~Tema,
      type = "bar",
      orientation = 'h',
      marker = list(
        color = cores[1:nrow(temas_top10)],
        line = list(color = 'rgba(0,0,0,0.3)', width = 1)
      ),
      text = ~paste("Tema:", Tema, "<br>Total:", Total),
      hoverinfo = 'text'
    ) %>%
      layout(
        xaxis = list(title = "N√∫mero de Contribui√ß√µes"),
        yaxis = list(title = "", categoryorder = "total ascending"),
        showlegend = FALSE,
        margin = list(l = 150)
      )
  })
  
  output$grafico_situacao <- renderPlotly({
    situacao_df <- sumarizar_por_situacao(dados)
    cores <- c("Admitida" = "#28a745", "N√£o Admitida" = "#dc3545", "Parcialmente Admitida" = "#ffc107", "N√£o Informado" = "#6c757d")
    
    plot_ly(
      data = situacao_df,
      labels = ~Situa√ß√£o,
      values = ~Total,
      type = "pie",
      marker = list(colors = cores[situacao_df$Situa√ß√£o]),
      textposition = "inside",
      textinfo = "label+percent"
    ) %>% layout(showlegend = TRUE)
  })
  
  output$grafico_temporal <- renderPlotly({
    temporal_df <- sumarizar_por_data(dados)
    if (nrow(temporal_df) == 0) {
      return(plotly_empty() %>% layout(title = "Sem dados temporais v√°lidos."))
    }
    plot_ly(temporal_df, x = ~Data, y = ~Total, type = "scatter", mode = "lines+markers",
            line = list(color = "#17a2b8"),
            text = ~paste("Data:", format(Data, "%d/%m/%Y"), "<br>Contribui√ß√µes:", Total),
            hoverinfo = 'text') %>%
      layout(xaxis = list(title = "Data"), yaxis = list(title = "Total de Contribui√ß√µes"))
  })
  
  # Gr√°fico de Institui√ß√µes - COM CORES E SEM NOMES NAS BARRAS
  output$grafico_instituicao <- renderPlotly({
    inst_df <- sumarizar_por_instituicao(dados)
    inst_top10 <- head(inst_df, 10)
    
    # Cores diferentes para cada institui√ß√£o
    cores <- c("#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd",
               "#8c564b", "#e377c2", "#7f7f7f", "#bcbd22", "#17becf")
    
    plot_ly(
      data = inst_top10,
      x = ~Total,
      y = ~Institui√ß√£o,
      type = "bar",
      orientation = 'h',
      marker = list(
        color = cores[1:nrow(inst_top10)],
        line = list(color = 'rgba(0,0,0,0.3)', width = 1)
      ),
      text = ~paste("Institui√ß√£o:", Institui√ß√£o, "<br>Total:", Total, "<br>Taxa Admiss√£o:", Taxa_Admiss√£o, "%"),
      hoverinfo = 'text'
    ) %>%
      layout(
        xaxis = list(title = "N√∫mero de Contribui√ß√µes"),
        yaxis = list(title = "", showticklabels = FALSE), # Remove os nomes das barras
        showlegend = TRUE,
        legend = list(
          orientation = "v",
          x = 1.05,
          y = 0.5,
          xanchor = "left"
        ),
        margin = list(r = 200) # Espa√ßo para a legenda
      )
  })
  
  # NOVO: Gr√°fico de Pizza para Temas
  output$grafico_temas_pizza <- renderPlotly({
    temas_df <- sumarizar_por_tema(dados)
    temas_top10 <- head(temas_df, 10)
    
    # Cores para o gr√°fico de pizza
    cores <- c("#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd",
               "#8c564b", "#e377c2", "#7f7f7f", "#bcbd22", "#17becf")
    
    plot_ly(
      data = temas_top10,
      labels = ~Tema,
      values = ~Total,
      type = "pie",
      marker = list(colors = cores[1:nrow(temas_top10)]),
      textposition = "inside",
      textinfo = "label+percent",
      hoverinfo = "label+value+percent"
    ) %>% 
      layout(
        showlegend = TRUE,
        legend = list(orientation = "h", x = 0.5, y = -0.1, xanchor = "center")
      )
  })
  
  # NOVO: Gr√°fico Radar para Temas x Institui√ß√µes
  output$grafico_radar <- renderPlotly({
    radar_df <- sumarizar_para_radar(dados)
    
    if (nrow(radar_df) == 0) {
      return(plotly_empty() %>% layout(title = "Sem dados suficientes para o gr√°fico radar."))
    }
    
    # Seleciona as top 5 institui√ß√µes e top 5 temas para n√£o sobrecarregar o gr√°fico
    top_instituicoes <- radar_df %>%
      group_by(Institui√ß√£o) %>%
      summarise(Total = sum(Contribui√ß√µes)) %>%
      arrange(desc(Total)) %>%
      head(5) %>%
      pull(Institui√ß√£o)
    
    top_temas <- radar_df %>%
      group_by(Tema) %>%
      summarise(Total = sum(Contribui√ß√µes)) %>%
      arrange(desc(Total)) %>%
      head(5) %>%
      pull(Tema)
    
    radar_filtrado <- radar_df %>%
      filter(Institui√ß√£o %in% top_instituicoes, Tema %in% top_temas)
    
    # Cria o gr√°fico radar
    plot_ly(
      type = 'scatterpolar',
      fill = 'toself'
    ) %>%
      # Adiciona uma linha para cada institui√ß√£o
      add_trace(
        data = radar_filtrado %>% filter(Institui√ß√£o == top_instituicoes[1]),
        r = ~Contribui√ß√µes,
        theta = ~Tema,
        name = top_instituicoes[1],
        fillcolor = 'rgba(31, 119, 180, 0.3)',
        line = list(color = 'rgba(31, 119, 180, 0.8)')
      ) %>%
      add_trace(
        data = radar_filtrado %>% filter(Institui√ß√£o == top_instituicoes[2]),
        r = ~Contribui√ß√µes,
        theta = ~Tema,
        name = top_instituicoes[2],
        fillcolor = 'rgba(255, 127, 14, 0.3)',
        line = list(color = 'rgba(255, 127, 14, 0.8)')
      ) %>%
      add_trace(
        data = radar_filtrado %>% filter(Institui√ß√£o == top_instituicoes[3]),
        r = ~Contribui√ß√µes,
        theta = ~Tema,
        name = top_instituicoes[3],
        fillcolor = 'rgba(44, 160, 44, 0.3)',
        line = list(color = 'rgba(44, 160, 44, 0.8)')
      ) %>%
      layout(
        polar = list(
          radialaxis = list(
            visible = TRUE,
            range = c(0, max(radar_filtrado$Contribui√ß√µes, na.rm = TRUE))
          )
        ),
        showlegend = TRUE
      )
  })
  
  # Tabelas
  dt_options <- list(
    pageLength = 10, 
    scrollX = TRUE,
    language = list(url = '//cdn.datatables.net/plug-ins/1.10.11/i18n/Portuguese-Brasil.json')
  )
  
  output$tabela_instituicoes <- renderDT({ 
    datatable(
      sumarizar_por_instituicao(dados), 
      rownames = FALSE, 
      options = c(dt_options, list(dom = 'tip')) 
    ) %>% 
      formatStyle('Taxa_Admiss√£o',
                  backgroundColor = styleInterval(c(30, 70), c('#ffcccc', '#ffffcc', '#ccffcc')))
  })
  
  # Tabela de Dados Completos - COM CORES POR TEMA
  output$tabela_dados <- renderDT({ 
    dados_para_exibir <- dados_tabela_completa()
    
    # Identifica a coluna de tema
    col_tema <- names(dados_para_exibir)[stringr::str_detect(names(dados_para_exibir), regex("tema", ignore_case = TRUE))][1]
    
    if (!is.na(col_tema)) {
      # Cria a tabela com formata√ß√£o condicional por tema
      datatable(
        dados_para_exibir,
        options = dt_options,
        filter = 'top',
        rownames = FALSE
      ) %>%
        formatStyle(
          col_tema,
          backgroundColor = styleEqual(
            unique(dados_para_exibir[[col_tema]]),
            colorRampPalette(c("#e3f2fd", "#bbdefb", "#90caf9", "#64b5f6", "#42a5f5"))(length(unique(dados_para_exibir[[col_tema]])))
          )
        )
    } else {
      datatable(
        dados_para_exibir,
        options = dt_options,
        filter = 'top',
        rownames = FALSE
      )
    }
  })
  
  # Downloads
  output$baixar_instituicoes_csv <- downloadHandler(
    filename = function() paste0("instituicoes_", Sys.Date(), ".csv"),
    content = function(file) write_csv(sumarizar_por_instituicao(dados), file)
  )
  output$baixar_instituicoes_xlsx <- downloadHandler(
    filename = function() paste0("instituicoes_", Sys.Date(), ".xlsx"),
    content = function(file) write_xlsx(sumarizar_por_instituicao(dados), file)
  )
  
  output$baixar_dados_csv <- downloadHandler(
    filename = function() paste0("dados_completos_", Sys.Date(), ".csv"),
    content = function(file) write_csv(dados, file)
  )
  output$baixar_dados_xlsx <- downloadHandler(
    filename = function() paste0("dados_completos_", Sys.Date(), ".xlsx"),
    content = function(file) write_xlsx(dados, file)
  )
}

# ------------------------------------------------------------
# üîπ Executar app
# ------------------------------------------------------------
shinyApp(ui, server)
