      menuItem("üìã Dados", tabName = "dados", icon = icon("database")),
      menuItem("‚ÑπÔ∏è Sobre", tabName = "sobre", icon = icon("info-circle"))
    ),
    hr(),
    helpText("Desenvolvido com Shiny", style = "padding: 10px;")
  ),
  dashboardBody(
    tags$head(tags$style(HTML("
      .small-box { text-align: center; }
      .box { border-radius: 8px; }
      .content-wrapper { background-color: #f8f9fa; }
      .download-btn { margin: 2px; font-size: 12px; }
      .info-box-custom { 
        background: #f8f9fa; 
        padding: 15px; 
        margin: 10px 0; 
        border-radius: 5px; 
        border-left: 4px solid #0073b7;
      }
    "))),
    
    tabItems(
